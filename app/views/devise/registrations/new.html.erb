<div class='devise-forms'>
  <h2>Sign up</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">
      <%= f.text_field :name, autofocus: true, class: 'input-field' %>
      <%= f.label :name, class: 'input-label' %><br />
    </div>
    
    <div class="field">
      <%= f.email_field :email, class: 'input-field', autocomplete: "off" %>
      <%= f.label :email, class: 'input-label' %><br />
    </div>
  
    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: 'input-field' %>
      <%= f.label :password, class: 'input-label' %>
    </div>
  
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input-field' %>
      <%= f.label :password_confirmation, class: 'input-label' %><br />
    </div>
  
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>