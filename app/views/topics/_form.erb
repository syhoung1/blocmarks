<div class='grid'>
  <h1>
    <%= form_for @topic do |f| %>
      <div class="topic-form">
        <%= f.text_field :title, autofocus: true, class: 'input-field' %>
        <%= f.label :title, class: 'input-label' %><br />
      </div>
    	<div class="actions">
        <%= f.submit "Submit" %>
    	</div>
    <% end %>
  </h1>
</div>
